{
	"compilerOptions": {
		"target": "ES2024",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "tests"]
}
